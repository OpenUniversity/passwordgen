{
  "name": "Password Generator",
  "version": "0.0",
  "manifest_version": 2,
  "description": "Generate passwords for websites based on a secret password and their domains.",
  "icons": {
    "32": "icons/icon-small.svg",
    "48": "icons/icon-big.svg",
    "256": "icons/icon-big.svg"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": [
      "js/background.js",
      "jshash/md5.js",
      "jshash/sha1.js",
      "jshash/sha256.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/icon-19.png",
      "38": "icons/icon-38.png"
    },
    "default_title": "Password Generator",
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}
